<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Иконка финансовой операции -->
    <ImageView
        android:id="@+id/icon_operation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        tools:src="@drawable/income_icon"/>

    <!-- Сумма операции -->
    <TextView
        android:id="@+id/title_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#49454F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/icon_operation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="20dp"
        tools:text="@string/title_transfer_income"/>

</androidx.constraintlayout.widget.ConstraintLayout>